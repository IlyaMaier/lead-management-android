<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="Category 1">
        <androidx.preference.EditTextPreference
            android:defaultValue="Default value"
            android:dialogMessage="change server location using this entry box."
            android:key="server_location"
            android:summary="current location"
            android:title="Server Location" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:title="Toggle mode" />

        <Preference
            android:key="about"
            android:title="About" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>