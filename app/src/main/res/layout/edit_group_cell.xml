<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_group_cell_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/edit_group_check"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_unchecked_24dp"
        android:contentDescription="@string/check" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/edit_group_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/edit_group_check"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/edit_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12.5dp"
        android:layout_toEndOf="@id/edit_group_avatar"
        android:maxLines="1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edit_group_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_group_name"
        android:layout_alignBottom="@id/edit_group_avatar"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/edit_group_avatar"
        android:maxLines="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="@color/colorPrimary" />

</RelativeLayout>